.ant-layout-header
    .trigger
        font-size: 18px;
        line-height: 64px;
        padding: 0 24px;
        cursor: pointer;
        transition: color .3s;
        color: #fff;
        &:hover
            color: #1890ff;

.layout-retract
    margin-left: 80px;
    transition: all .2s;

.layout-elongation
    margin-left: 200px;
    transition: all .2s;

.sider-menu
    position: fixed;
    height: 100%;
    left: 0;
    z-index: 999;
    background: #fff;
    box-shadow: 2px 0 6px 0 rgba(0,21,41,0.35);

.ant-layout-sider-children
    .sider-menu-logo
        height: 64px;
        background: #3F51B5;
    .sider-menu-wrap
        height: 100%;
        overflow:auto;
        -webkit-overflow-scrolling:touch;
        -webkit-transition: background .3s,width .2s;
        transition: background .3s,width .2s;
        &::-webkit-scrollbar
            width:7px;
        &::-webkit-scrollbar-thumb
            background:rgba(153,153,153,0.5);
            border-radius:5px;
        &::-webkit-scrollbar-track
            background:#ddd;

.header_wrap
    position: fixed;
    top: 0;
    width: 100%;
    height: 64px;
    background: #3F51B5;
    padding: 0;

.page_content
    position: absolute;
    left: 0;
    right: 0;
    top: 64px;
    bottom: 0;
    transition: left .2s;
    overflow:auto;
    -webkit-overflow-scrolling:touch;
    -webkit-transition: background .3s,width .2s;
    transition: background .3s,width .2s;
    &::-webkit-scrollbar
        width:7px;
    &::-webkit-scrollbar-thumb
        background:rgba(153,153,153,0.5);
        border-radius:5px;
    &::-webkit-scrollbar-track
        background:#ddd;
        
.min_width
    min-width: 1250px;
    
.page_content_unfold
        left:200px;
.page_content_fold
        left:80px;

