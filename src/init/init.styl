.ant-layout-header
    .trigger
        font-size: 18px;
        line-height: 64px;
        padding: 0 24px;
        cursor: pointer;
        transition: color .3s;
        &:hover
            color: #1890ff;

.ant-layout-sider-children
    .logo
        height: 32px;
        background: rgba(255,255,255,.2);
        margin: 16px;

.layout-retract
    margin-left: 80px;
    transition: all .2s;

.layout-elongation
    margin-left: 200px;
    transition: all .2s;

.sider-menu
    overflow: auto;
    height: 100vh;
    position: fixed;
    left: 0;
    z-index: 999;

.header_wrap
    position: fixed;
    top: 0;
    width: 100%;
    height: 64px;
    background: #3F51B5; 
    padding: 0;

.page_content
    position: absolute;
    left: 0;
    right: 0;
    top: 64px;
    bottom: 0;
    min-width: 1250px;
    transition: all .2s;
    overflow:auto;
    -webkit-overflow-scrolling:touch;
    -webkit-transition: background .3s,width .2s;
    transition: background .3s,width .2s;
    &::-webkit-scrollbar
        width:7px;
    &::-webkit-scrollbar-thumb
        background:rgba(153,153,153,0.5);
        border-radius:5px;
    &::-webkit-scrollbar-track
        background:#ddd;
    &.page_content_unfold
        left:200px;
    &.page_content_fold
        left:80px;