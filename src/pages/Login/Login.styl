.login_wrapper
    width: 100%;
    margin: 0 auto;
    .container_login
        width: 100%;
        min-height: 100vh;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        background: #9053c7;
        background: linear-gradient(-135deg, #c850c0, #4158d0);
        .login_panel_wrap
            width: 500px;
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
            padding: 20px;
            .logo_wrap
                font-size: 0;
                width: 240px;
                height: 50px;
                margin: 0 auto;
                margin-bottom: 20px;
                .logo_img
                    width: 100%;
                    height: 100%;
            .login_item
                display: flex;
                justify-content: center;

