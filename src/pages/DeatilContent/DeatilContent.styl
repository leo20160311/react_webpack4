.detail-content
    display: flex
    width: 100%
    .detail-padding15
        padding: 0 15px
    .detail-left
        flex: 0 0 165px
        .detail-img
            width: 150px
            height: 150px
            background: url('../../images/kitty.png') no-repeat
            background-size: 150px 150px
            font-size: 0
            border-radius: 25px;
            background: #ffffff
            img
                width: 150px
                height: 150px
                border-radius: 25px;
                box-shadow: 0px 0px 7px 0px rgba(0, 0, 0, 0.03)
                background-color: #fff
                border: 1px solid #f1f1f1
    .detail-center
        flex: 2
        .heard
            .title
                font-size: 30px
                font-weight: 500
            .heart
                float: right
                font-size: 15px
                color: #08c
                span
                    padding-left: 5px
        .heard-foot
            .heart
                font-size: 15px
                color: #08c
                span
                    padding-left: 5px
        .describe
            font-size: 14px
            line-height: 20px
    .detail-right
        flex: 1
        padding-top: 25px
        border-left: 1px solid #d5d5d5

.line
    border-bottom: 1px solid #d5d5d5
    padding-bottom: 10px
    margin-bottom: 10px

.margintop20
    margin-top: 20px

.custom-radius-image
    position: relative
    border-radius: 3px
    margin-bottom: 10px
    img
        display: block
        border-radius: 3px
        &:hover
            cursor: pointer
    &:last-child
        margin-bottom: 0
    .custom-radius-mask
        position: absolute
        top: 0
        left: 0
        right: 0
        bottom: 0
        background-color: rgba(0, 0, 0, 0.6)
        .link
            -webkit-box-sizing: border-box
            box-sizing: border-box
            display: block
            height: inherit
            padding: 20px
            color: #ffffff
            .title
                display: block
                text-align: center
                margin: 0 0 10px
                font-size: 20px
                font-weight: 300
                line-height: 24px
            .text
                display: block
                text-align: center
                margin: 0 0 40px
                font-size: 13px
                font-weight: 400
                line-height: 18px                        
        &:hover
            cursor: pointer

.custom-image img
    display: block
    &:hover
        cursor: pointer
.custom-card
    padding: 10px 16px
    p
        color: #999

.noData
    height: 110px
    line-height: 110px
    color: #999
