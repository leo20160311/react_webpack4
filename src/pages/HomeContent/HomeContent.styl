.home-content
    width: 100%
    .home-content-wrap
        .home-content-left
            padding-right: 15px
            
.margintop20
    margin-top: 20px

.custom-radius-image
    position: relative
    border-radius: 3px
    margin-bottom: 10px
    img
        display: block
        border-radius: 3px
        &:hover
            cursor: pointer
    &:last-child
        margin-bottom: 0
    .custom-radius-mask
        position: absolute
        top: 0
        left: 0
        right: 0
        bottom: 0
        background-color: rgba(0, 0, 0, 0.6)
        .link
            -webkit-box-sizing: border-box
            box-sizing: border-box
            display: block
            height: inherit
            padding: 20px
            color: #ffffff
            .title
                display: block
                text-align: center
                margin: 0 0 10px
                font-size: 20px
                font-weight: 300
                line-height: 24px
            .text
                display: block
                text-align: center
                margin: 0 0 40px
                font-size: 13px
                font-weight: 400
                line-height: 18px                        
        &:hover
            cursor: pointer

.custom-image img
    display: block
    &:hover
        cursor: pointer
.custom-card
    padding: 10px 16px
    p
        color: #999

.noData
    height: 110px
    line-height: 110px
    color: #999