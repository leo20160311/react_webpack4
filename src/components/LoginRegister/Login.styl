.login_module_wrap
    .title
        font-family: PingFangSC-Semibold;
        font-size: 28px;
        color: #212121;
    .icon
        width: 63px;
        height: 6px;
        background: #212121;
        border-radius: 6px;
        margin-top: 10px;
        margin-bottom: 35px;

.login_input
    width: 328px;
    height: 40px;
    padding-left: 30px;
    background: #F7F5FC;
    border-radius: 20px;

.login_form_button
    width: 160px;
    height: 40px;
    margin-top: 10px;
    background-image: linear-gradient(-90deg, #5860E4 0%, #6C8BF3 100%);
    box-shadow: 0 7px 12px 0 rgba(141,151,237,0.50);
    border-radius: 20px;
    font-size: 16px;
    color: #DFE2F1;
    border: none;
.login_form_button[disabled]
    background-color: #f5f5f5;
    background-image: none;

.ahref
    font-size: 14px;
    color: #5860E4;
    margin-right: 65px;
    &:last-child
        margin-right: 0;
        