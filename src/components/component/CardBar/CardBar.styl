.cardbar
    display: flex
    border-bottom: 1px solid #d5d5d5
    padding-bottom: 10px
    margin-bottom: 10px
    .cardbar-img
        flex: 0 0 50px
        width: 50px
        height: 50px
        font-size: 0
        border-radius: 15px;
        background: #ffffff
        &:hover
            cursor: pointer
        img
            width: 50px
            height: 50px
            border-radius: 15px;
            box-shadow: 0px 0px 7px 0px rgba(0, 0, 0, 0.03)
            background-color: #fff
            border: 1px solid #f1f1f1
    .cardbar-content
        flex: 1
        vertical-align: top
        padding-left: 10px
        .cardbar-title
            font-size: 14px
            font-weight: 500
            &:hover
                cursor: pointer