.biscuitsbigcard-wrap
    padding: 20px
    background: #ffffff
    .biscuitsbigcard-left
        display: inline-block
        background: url('../../../images/kitty_265x244_2x.png') no-repeat
        background-size: 120px 120px
        width: 120px
        height: 120px
        img
            width: 100%
            height: 100%
        &:hover
            cursor: pointer

    .biscuitsbigcard-right
        display: inline-block
        padding: 0 0 0 15px
        .title
            font-size: 28px
            font-weight: 600
            line-height: 34px
        .text
            display: block
            font-size: 16px
            font-weight: 400
            line-height: 65px
            color: #999
            overflow: hidden
            text-overflow: ellipsis
            white-space: nowrap

    .biscuitsbigcard-btn
        margin-top: 20px
        padding-top: 20px
        border-top: 1px solid #e8e8e8
    

.hm
    height: 22px
    margin-right: 10px

.marg10
    margin-bottom: 10px
    &::last-child
        margin-bottom: 0